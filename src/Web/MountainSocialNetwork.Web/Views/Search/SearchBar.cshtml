@model MountainSocialNetwork.Web.ViewModels.BlogHomePage.HomeViewModel


@foreach (var search in Model.SearchViewModel)
{

    <h2>Searched Results: @Model.SearchViewModel.Count()</h2>

    <h1 class="my-4">
        Page Heading
        <small>Secondary Text</small>
    </h1>
    <div class="card mb-4">
        <img class="card-img-top" src="@search.PictureUrl" alt="Card image cap">
        <div class="card-body">
            <h2 class="card-title">@search.Title</h2>
            <p class="card-text">@Html.Raw(search.ShortContent)</p>
            @*//<a href="#" class="btn btn-primary">Read More &rarr;</a>*@
            <a asp-controller="Articles" asp-action="ById" asp-route-Id="@search.Id"><button class="btn btn-outline-success my-2 my-sm-0" type="button">Read More</button></a>

            <form method="post" asp-controller="ArticlesHomePage" asp-action="CreateFavouriteArticle" asp-route-PostId="@search.Id">
                <button class="btn btn-outline-success" type="submit">Add post to favorites!</button>
            </form>
        </div>
        <div class="card-footer text-muted">
            <a class="fas fa-calendar-alt"> Posted on <time datetime="@search.CreatedOn.ToString("O")"></time> by  </a>
            <a class="fas fa-user"> @search.UserUserName  </a>
            <a class="fas fa-comment-dots"> @search.CommentsCount</a>
        </div>
    </div>

}




