@model MountainSocialNetwork.Web.ViewModels.BlogPosts.ArticlePostCreateInputModel
@{
    this.ViewData["Title"] = "New Article";
}

<h1>@this.ViewData["Title"]</h1>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>



<form method="post" asp-action="Create" asp-controller="Articles" enctype="multipart/form-data">

    <div>

        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Title"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <br />
    <div>

        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control" placeholder="Type your content..."></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>


    </div>

    <div>

        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="Model.Categories.Select(x=> new SelectListItem(x.Name, x.Id.ToString()))"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>


    </div>

    <div class="form-group">
        <label asp-for="Picture"></label>
        <input asp-for="Picture" multiple />
        <span asp-validation-for="Picture" class="text-danger"></span>

    </div>
    <input type="submit" class="btn btn-primary" />

</form>


@section Scripts {
    <script type="text/javascript">
        tinymce.init({
            selector: "textarea",
            plugins: [
                "image paste table link code media emoticons"
            ],
            toolbar: "emoticons",
            height: 500,


        });
    </script>
}
